@model SalesAndPurchaseManagement.Models.Product

@{
    ViewData["Title"] = "Thêm Sản Phẩm";

    Layout = "~/Views/Shared/MyLayoutHelper.cshtml";
}

@section Styles {
    <link rel="stylesheet" href="~/css/product.css">
}

<div class="container">
    <div class="title">THÊM SẢN PHẨM</div>
    <form class="detail" asp-controller="Product" asp-action="Create" method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="Image" value="1.png" />
        <div class="image d-flex flex-column justify-content-between">
            <div class="d-flex flex-column align-content-center">
                <img id="productPreview" src="~/images/ProductImages/1.png" alt="" />
                <div class="form-group d-flex justify-content-center">
                    <label for="imageFile">Chọn Ảnh</label>
                    <input type="file" id="imageFile" name="imageFile" class="form-control" accept="image/*" onchange="previewImage(event)" style="display:none;" />
                </div>
            </div>

            <div class="buttons d-flex justify-content-center flex-wrap">
                <a class="product-btn" asp-controller="Product" asp-action="Index">Quay lại</a>
                <button class="product-btn" type="submit">Thêm</button>
            </div>
        </div>

        <div class="content">
            <div class="form-group row mb-3">
                <label asp-for="ProductName" class="col-sm-4 col-form-label"></label>
                <div class="col-sm-8">
                    <input asp-for="ProductName" class="form-control" />
                    <span asp-validation-for="ProductName" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row mb-3">
                <label asp-for="Length" class="col-sm-4 col-form-label"></label>
                <div class="col-sm-8">
                    <input asp-for="Length" class="form-control" />
                    <span asp-validation-for="Length" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row mb-3">
                <label asp-for="Width" class="col-sm-4 col-form-label"></label>
                <div class="col-sm-8">
                    <input asp-for="Width" class="form-control" />
                    <span asp-validation-for="Width" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row mb-3">
                <label asp-for="Height" class="col-sm-4 col-form-label"></label>
                <div class="col-sm-8">
                    <input asp-for="Height" class="form-control" />
                    <span asp-validation-for="Height" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row mb-3">
                <label asp-for="Color" class="col-sm-4 col-form-label"></label>
                <div class="col-sm-8">
                    <input asp-for="Color" class="form-control" />
                    <span asp-validation-for="Color" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row mb-3">
                <label asp-for="CategoryId" class="col-sm-4 col-form-label"></label>
                <div class="col-sm-8">
                    <select asp-for="CategoryId" class="form-control select2bs4" asp-items="@ViewBag.Categories"></select>
                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row mb-3">
                <label asp-for="ShapeId" class="col-sm-4 col-form-label"></label>
                <div class="col-sm-8">
                    <select asp-for="ShapeId" class="form-control select2bs4" asp-items="@ViewBag.Shapes"></select>
                    <span asp-validation-for="ShapeId" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row mb-3">
                <label asp-for="MaterialId" class="col-sm-4 col-form-label"></label>
                <div class="col-sm-8">
                    <select asp-for="MaterialId" class="form-control select2bs4" asp-items="@ViewBag.Materials"></select>
                    <span asp-validation-for="MaterialId" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row mb-3">
                <label asp-for="CountryOfOriginId" class="col-sm-4 col-form-label"></label>
                <div class="col-sm-8">
                    <select asp-for="CountryOfOriginId" class="form-control select2bs4" asp-items="@ViewBag.Countries"></select>
                    <span asp-validation-for="CountryOfOriginId" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row mb-3">
                <label asp-for="ManufacturerId" class="col-sm-4 col-form-label"></label>
                <div class="col-sm-8">
                    <select asp-for="ManufacturerId" class="form-control select2bs4" asp-items="@ViewBag.Manufacturers"></select>
                    <span asp-validation-for="ManufacturerId" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row mb-3">
                <label asp-for="FeatureId" class="col-sm-4 col-form-label"></label>
                <div class="col-sm-8">
                    <select asp-for="FeatureId" class="form-control select2bs4" asp-items="@ViewBag.Features"></select>
                    <span asp-validation-for="FeatureId" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row mb-3">
                <label asp-for="CharacteristicId" class="col-sm-4 col-form-label"></label>
                <div class="col-sm-8">
                    <select asp-for="CharacteristicId" class="form-control select2bs4" asp-items="@ViewBag.Characteristics"></select>
                    <span asp-validation-for="CharacteristicId" class="text-danger"></span>
                </div>
            </div>

            <!-- Ẩn trường Quantity -->
            <div class="form-group row mb-3" style="display:none;">
                <label asp-for="Quantity" class="col-sm-4 col-form-label"></label>
                <div class="col-sm-8">
                    <input asp-for="Quantity" class="form-control" />
                    <span asp-validation-for="Quantity" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row mb-3">
                <label asp-for="PurchasePrice" class="col-sm-4 col-form-label"></label>
                <div class="col-sm-8">
                    <input asp-for="PurchasePrice" class="form-control decimal-input" />
                    <span asp-validation-for="PurchasePrice" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row mb-3">
                <label asp-for="SellingPrice" class="col-sm-4 col-form-label"></label>
                <div class="col-sm-8">
                    <input asp-for="SellingPrice" class="form-control decimal-input" />
                    <span asp-validation-for="SellingPrice" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row mb-3">
                <label asp-for="WarrantyPeriod" class="col-sm-4 col-form-label"></label>
                <div class="col-sm-8">
                    <input asp-for="WarrantyPeriod" class="form-control decimal-input" />
                    <span asp-validation-for="WarrantyPeriod" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row mb-3 description">
                <label asp-for="Notes" class="col-sm-4 col-form-label"></label>
                <div class="col-sm-8">
                    <textarea asp-for="Notes" class="form-control decimal-input"></textarea>
                    <span asp-validation-for="Notes" class="text-danger"></span>
                </div>
            </div>

        </div>
    </form>
</div>

@section Scripts {
    @Html.Partial("_ValidationScriptsPartial")
    <script>
        function previewImage(event) {
            const file = event.target.files[0];
            const reader = new FileReader();
            reader.onload = function (e) {
                const avatarPreview = document.getElementById('productPreview');
                avatarPreview.src = e.target.result;
            }
            reader.readAsDataURL(file);
        }
    </script>
}
