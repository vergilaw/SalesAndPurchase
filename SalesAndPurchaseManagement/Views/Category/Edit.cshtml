@model SalesAndPurchaseManagement.Models.Category

@{
    ViewData["Title"] = "Chỉnh Sửa Danh Mục";
    Layout = "~/Views/Shared/MyLayoutHelper.cshtml";
}

<section class="content">
    <div class="ms-2 mx-2">

        <form asp-controller="Category" asp-action="Edit" method="post" class="mt-3">

            <input type="hidden" asp-for="CategoryId" />

            <div class="card card-warning">
                <div class="card-header">
                    <h3 class="card-title">Thông Tin Danh Mục</h3>
                </div>
                <div class="card-body">

                    <div class="form-group row mb-3">
                        <label asp-for="CategoryName" class="col-sm-4 col-form-label"></label>
                        <div class="col-sm-8">
                            <input asp-for="CategoryName" class="form-control" />
                            <span asp-validation-for="CategoryName" class="text-danger"></span>
                        </div>
                    </div>

                </div>
            </div>

            <div class="row">
                <div class="col-12">
                    <a asp-action="Index" class="btn btn-secondary">Quay Lại</a>
                    <button type="submit" class="btn btn-warning float-right">Cập nhật</button>
                </div>
            </div>

        </form>
    </div>
</section>

@section Scripts {
    @Html.Partial("_ValidationScriptsPartial")
}