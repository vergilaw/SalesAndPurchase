@model IEnumerable<SalesAndPurchaseManagement.Models.Category>

@{
    ViewData["Title"] = "Danh Sách Danh Mục";
    Layout = "~/Views/Shared/MyLayoutHelper.cshtml";
}

<div class="ms-2 mx-2">
    <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
        <i class="fa fa-plus"></i> Tạo Danh Mục Mới
    </a>

    @if (!Model.Any())
    {
        <div class="alert alert-warning mt-3">
            Không có danh mục nào trong danh sách.
        </div>
    }
    else
    {
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Danh Sách Danh Mục</h3>
            </div>
            <div class="card-body">
                <table id="example1" class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.First().CategoryId)</th>
                            <th>@Html.DisplayNameFor(model => model.First().CategoryName)</th>
                            <th>Sửa</th>
                            <th>Xóa</th>
                            
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var category in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => category.CategoryId)</td>
                                <td>@Html.DisplayFor(modelItem => category.CategoryName)</td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@category.CategoryId" class="btn btn-warning btn-sm me-1">
                                        <i class="fa fa-pencil-alt"></i> Sửa
                                    </a>
                                </td>

                                <td>
                                    <a asp-action="Delete" asp-route-id="@category.CategoryId" class="btn btn-danger btn-sm me-1">
                                        <i class="fa fa-trash"></i> Xóa
                                    </a>
                                </td>

                                

                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
</div>