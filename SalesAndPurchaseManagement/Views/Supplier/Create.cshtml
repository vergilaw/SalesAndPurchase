@model SalesAndPurchaseManagement.Models.Supplier

@{
    ViewData["Title"] = "Tạo Nhà Cung Cấp Mới";

    Layout = "~/Views/Shared/MyLayoutHelper.cshtml";
}

<section class="content">
    <div class="ms-2 mx-2">

        <form asp-controller="Supplier" asp-action="Create" method="post" class="mt-3">

            <div class="card card-primary">
                <div class="card-header">
                    <h3 class="card-title">Thông Tin Nhà Cung Cấp</h3>
                </div>
                <div class="card-body">

                    <div class="form-group row mb-3">
                        <label asp-for="SupplierName" class="col-sm-4 col-form-label"></label>
                        <div class="col-sm-8">
                            <input asp-for="SupplierName" class="form-control" placeholder="Nhập tên nhà cung cấp" />
                            <span asp-validation-for="SupplierName" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group row mb-3">
                        <label asp-for="Address" class="col-sm-4 col-form-label"></label>
                        <div class="col-sm-8">
                            <input asp-for="Address" class="form-control" placeholder="Nhập địa chỉ" />
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group row mb-3">
                        <label asp-for="PhoneNumber" class="col-sm-4 col-form-label"></label>
                        <div class="col-sm-8">
                            <input asp-for="PhoneNumber" class="form-control" placeholder="Nhập số điện thoại" />
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>
                    </div>

                </div>
            </div>

            <div class="row">
                <div class="col-12">
                    <a asp-action="Index" class="btn btn-secondary">Quay Lại</a>
                    <button type="submit" class="btn btn-primary float-right">Tạo</button>
                </div>
            </div>

        </form>
    </div>
</section>

@section Scripts {
    @Html.Partial("_ValidationScriptsPartial")
}
