@model SalesAndPurchaseManagement.Models.Job

@{
    ViewData["Title"] = "Tạo Công Việc Mới";
    Layout = "~/Views/Shared/MyLayoutHelper.cshtml";
}

<section class="content">
    <div class="ms-2 mx-2">

        <form asp-controller="Job" asp-action="Create" method="post" class="mt-3">

            <div class="card card-primary">
                <div class="card-header">
                    <h3 class="card-title">Thông Tin Công Việc</h3>
                </div>
                <div class="card-body">

                    <div class="form-group row mb-3">
                        <label asp-for="JobTitle" class="col-sm-4 col-form-label"></label>
                        <div class="col-sm-8">
                            <input asp-for="JobTitle" class="form-control" placeholder="Nhập chức danh công việc" />
                            <span asp-validation-for="JobTitle" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group row mb-3">
                        <label asp-for="Salary" class="col-sm-4 col-form-label"></label>
                        <div class="col-sm-8">
                            <input asp-for="Salary" class="form-control" placeholder="Nhập mức lương" />
                            <span asp-validation-for="Salary" class="text-danger"></span>
                        </div>
                    </div>

                </div>
            </div>

            <div class="row">
                <div class="col-12">
                    <a asp-action="Index" class="btn btn-secondary">Quay Lại</a>
                    <button type="submit" class="btn btn-primary float-right">Tạo</button>
                </div>
            </div>

        </form>
    </div>
</section>

@section Scripts {
    @Html.Partial("_ValidationScriptsPartial")
}
